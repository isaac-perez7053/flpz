# The structure/compound, or any sequence of lowercase letters without spaces: it will be appended to all files generated in this run
name catio3

# Input file for general information about the crystal 
genstruc general_structure.abi

# Number of datapoints
num_datapoints 9

#Number of processers for datapoint calculation
nproc 10

# Minimum amplitude during datapoint collection
min 0

# Maximum amplitude during datapoint collection
max 0.7

# Time limit for jobs
time_limit 23:59:59

# How many unstable phonons are calcuated from most to least unstable (default is all)
num_phon 2

# What phonons to calculate  
calc_phon 
2
1

